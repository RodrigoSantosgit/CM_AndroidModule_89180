<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="298dp"
        android:layout_height="84dp"
        android:text="..."
        android:textColor="@android:color/white"
        android:textDirection="rtl"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

    <Button
        android:id="@+id/b10"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#919191"
        android:text="*"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b7" />

    <Button
        android:id="@+id/b8"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#919191"
        android:text="8"
        android:textSize="35sp"
        app:layout_constraintEnd_toStartOf="@+id/b9"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/b7"
        app:layout_constraintTop_toBottomOf="@+id/b5" />

    <Button
        android:id="@+id/b7"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#919191"
        android:text="7"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b4" />

    <Button
        android:id="@+id/b1"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#919191"
        android:text="1"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/b4"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#919191"
        android:text="4"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <Button
        android:id="@+id/b5"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#919191"
        android:text="5"
        android:textSize="35sp"
        app:layout_constraintEnd_toStartOf="@+id/b6"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toEndOf="@+id/b4"
        app:layout_constraintTop_toBottomOf="@+id/b2" />

    <Button
        android:id="@+id/b0"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#919191"
        android:text="0"
        android:textSize="35sp"
        app:layout_constraintEnd_toStartOf="@+id/b11"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/b10"
        app:layout_constraintTop_toBottomOf="@+id/b8" />

    <Button
        android:id="@+id/b11"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#919191"
        android:text="#"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b9" />

    <Button
        android:id="@+id/b9"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#919191"
        android:text="9"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b6" />

    <Button
        android:id="@+id/b6"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#919191"
        android:text="6"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b3" />

    <Button
        android:id="@+id/b3"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#919191"
        android:text="3"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="112dp"
        android:layout_height="84dp"
        android:layout_marginStart="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148"
        app:srcCompat="@drawable/ic_baseline_backspace_24" />

    <Button
        android:id="@+id/bCall"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#43C500"
        android:text="CALL"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b0"
        app:layout_constraintVertical_bias="0.111" />

    <Button
        android:id="@+id/b2"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#919191"
        android:text="2"
        android:textSize="35sp"
        app:layout_constraintEnd_toStartOf="@+id/b3"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toEndOf="@+id/b1"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/dial2"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:backgroundTint="#919191"
        android:text="dial2"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/dial3"
        app:layout_constraintStart_toEndOf="@+id/dial1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dial3"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#919191"
        android:text="Dial3"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dial2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dial1"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:backgroundTint="#919191"
        android:text="Dial1"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/dial2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>